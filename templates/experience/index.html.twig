{% extends 'base.html.twig' %}

{% block title %}Experience index{% endblock %}

{% block body %}
    <h1>Experience index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Poste</th>
                <th>Debut</th>
                <th>Fin</th>
                <th>Entreprise</th>
                <th>Description</th>
                <th>Actuelposte</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.poste }}</td>
                <td>{{ experience.debut ? experience.debut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.fin ? experience.fin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ experience.entreprise }}</td>
                <td>{{ experience.description }}</td>
                <td>{{ experience.actuelposte ? 'Yes' : 'No' }}</td>
                <td>{{ experience.createdAt ? experience.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('experience_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experience_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experience_new') }}">Create new</a>
{% endblock %}
