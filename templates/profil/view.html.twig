        <!-- Resume section start -->
        <section class="resume-section spad">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-7 offset-xl-2">
                        <div class="section-title">
                            <h2>Experience</h2>
                        </div>
                        <ul class="resume-list">
                            {% for experience in profil.experience %}
                                {% if profil.experience is empty %}
                                    <li>
                                        <h2>Aucune expérience</h2>
                                    </li>
                                {% endif %}
                                <li>
                                    <h2>
                                        {{experience.debut | date('Y') }}
                                        -
                                        {% if experience.fin %}
                                            {{experience.fin | date('Y') }}
                                        {% else %}
                                            Present
                                        {% endif %}
                                    </h2>
                                    <h3>
                                        {{experience.entreprise}}
                                    </h3>
                                    <h4>{{experience.poste}}
                                    </h4>
                                    <p>
                                        {% if experience.description %}
                                            {{experience.description}}
                                        {% endif %}
