        <!-- Hero section start -->
        <section class="hero-section spad">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-xl-10 offset-xl-1">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="hero-text">
                                    <h3>{{profil.nom}}
                                        {{profil.prenom}}</h3>
                                    <p>{{profil.titre}}</p>
                                </div>
                                <div class="hero-info">
                                    <h3 class="mt-3">Information Personnelle</h3>
                                    <ul>
                                        <li>
                                            <span>Date de naissance:</span>{{profil.dateNais | date}}</li>
                                        <li>
                                            <span>Adresse:</span>{{profil.adresse}}</li>
                                        <li>
                                            <span>E-mail:</span>
                                            {{profil.UserId.email}}
                                        </li>
                                        {% if profil.telephone %}
                                            <li>
                                                <span>Telephone:</span>
                                                {{profil.telephone}}
                                            </li>
                                        {% endif %}
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <figure class="hero-image">
                                    <img src="{{vich_uploader_asset(profil,'imageFile') }}" style=" width:auto; height:512px;" alt="5">
                                </figure>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
